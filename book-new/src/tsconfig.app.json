{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"outDir": "../out-tsc/app",
		"baseUrl": "./",
		"module": "esnext",
		"types": ["node"],
		"typeRoots": ["../node_modules/@types"]
	},
	"angularCompilerOptions": {
		"fullTemplateTypeCheck": true,
		"strictInjectionParameters": true,
		"enableIvy": true
	},
	"exclude": ["test.ts", "**/*.spec.ts"]
}
